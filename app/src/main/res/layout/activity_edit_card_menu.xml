<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCardMenu">

    <Button
        android:id="@+id/button4"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="16dp"
        android:onClick="prevSetName"
        android:text="Prev"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/currentSet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editSetButton"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:onClick="editSet"
        android:text="Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentSet" />

    <Button
        android:id="@+id/button3"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="#930000"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentSet" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCardSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:backgroundTint="#4CAF50"
        android:clickable="true"
        android:onClick="createNewSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentSet"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/currentSet"
        android:layout_width="208dp"
        android:layout_height="372dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="108dp"
        android:text="Class/Subject"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addCardSetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add Card Set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCardSet" />

    <Button
        android:id="@+id/button"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="16dp"
        android:onClick="nextSetName"
        android:text="Next"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currentSet"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>